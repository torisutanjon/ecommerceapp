<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/assets/scripts/cp_items.js" type="text/javascript"></script>
    <script src="/assets/scripts/jquery-3.5.1.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/assets/styles/cp_items_styles.css">
    <title>View Items</title>
</head>

<body>
    <div class="topnav">
        <a href="/" class="" id="home-btn"></a>
        <div class="anchor_div" id="anchor_div1">
            <a href="/">HOME</a>
        </div>
        <div class="anchor_div" id="anchor_div2">
            <a href="/orderpage">ORDERPAGE</a>
        </div>
        <div class="anchor_div" id="anchor_div3">
            <a href="/orderpage/computer_parts/cp_items">View All Items</a>
        </div>
        <button id="category-btn" onclick="sidebarslide()"></button>
        <input type="text" id="search-bar">
        <button id="search-btn">SEARCH</button>
        <div id="cart-div">
            <button id="cart-image" title="Click To View Cart"></button>
            <p id="item-total-count">0</p>
            <img src="" alt="" id="currency-sign">
            <p id="item-total-price">0.00</p>
        </div>
    </div>
    <div class="side-bar" id="side-bar">
    </div>
    <div class="main-div" id="maindiv">
    </div>
    <div class="clickedDiv" id="clickedDiv">
        <button id="closebtn" onclick="closehiddendiv()"></button>
        <img src="" alt="" class="clicked_div_image">
        <p class="clicked_div_item_category" id="clicked_div_item_category">Category : </p>
        <p class="clicked_div_item_name" id="clicked_div_item_name">Name : </p>
        <p class="clicked_div_item_price" id="clicked_div_item_price">Price : </p>
        <p class="clicked_div_discounted_price" id="clicked_div_discounted_price">Discounted Price : </p>
        <button class="clicked_div_btn">Add to Cart</button>
    </div>
